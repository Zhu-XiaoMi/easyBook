page,.page {
  height: 100%;
  
}
/*左侧导航  */
.page-top{
  position: fixed;
  width: 75%;
  height: 100%;
  top: 0;
  left: 0;
  background-color:white;
  transform: rotate(0deg) scale(1) translate(-100%,0%); 
  transition: 0.4s;
  z-index: 10000;
}
.page-top-show{
  transform: rotate(0deg) scale(1) translate(0%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(0%,0%); 
}
.nav-list{
  padding:24rpx 30rpx;
  font-size: 33rpx;
  border-bottom: 1px solid #f2f2f2;
}

/*右侧展示  */
.page-bottom{
  position: relative;
}
.off-nav-list{
  width: 35rpx;
  height: 35rpx;
}
.page-mask{
  width: 100%;
  height: 100%;
  background-color:rgba(0,0,0,0.5); 
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.page-mask-hide{
  display: none;
}


.panel{
	position: fixed;
	height: 96rpx;
	border-top: 2rpx solid #ddd;
	background: white;
	left: 0;
	right: 0;
	bottom: 0;
}
.panel-content{
	display: flex;
	justify-content: space-between;
	height: 100%;
	align-items: center;
}
.panel-set{
	display: flex;
	width: 64%;
	height: 100%;
	background-color: skyblue;
	justify-content: center;
	font-size: 32rpx;
}
.panel-menu {
	width: 18%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	border-right: 1rpx solid #ddd;
}
