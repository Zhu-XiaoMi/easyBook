
.header-nav{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 93rpx;
    padding: 20rpx 35rpx 0;
    align-items: Center;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: white;
}
/* 搜索框 */
.search-box {
   height: 66%;
   width: 65%;
   border-radius: 5rpx;
   font-size: 23rpx;
   background: #f2f2f2;
   padding: 0 70rpx;
   color: #a3a3a3;
}
.search{
    font-size: 32rpx;
}
.nav-title{
  border-bottom: 1px solid #ccc;
  
}
.text{
 margin: 0 35rpx;
 font-size: 30rpx;
}
.icon{
  position: absolute;
  top: 52rpx;
  left: 65rpx;
}
.novel-lists{
  height:227rpx;
  margin: 0rpx 35rpx;
  display: flex;
  border-bottom: 1px solid #f2f2f2;
  align-items: center;
}
.novel-list1{
  margin:90rpx 35rpx 0;
}
.nav{
  display: block;
}
.novel-img{
  width: 176rpx;
  height: 170rpx;
  box-shadow: 1px 1px 20px #e8e8e8;
}
.list-content{
  display: flex;
  height: 188rpx;
  width: 100%;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 35rpx; 
}
.novel-title{
  font-size: 35rpx;
}
.list-intro{
  font-size: 25rpx;
  color: #666666;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.list-author{
  font-size: 25rpx;
  color: #a8a8a8;
}
.list-bottom{
  font-size: 25rpx;
  color: gray;
  display: flex;
  justify-content: space-between;
  
}
.state{
  width: 70rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  color: #a8a8a8;
  border: 1px solid #d4d5da;
  border-radius: 5rpx;
}